<div class="mini_head">性別作成</div>
<div class="mini_main">
  <%= form_with(model: @sex, local: true, class:"mini_new_form") do |f| %>
    <div class="mini_create_form">
      <div class="flex">
        <div class="mini_title">コード</div>
        <%= f.text_field :code, class: "mini_form w15vw", maxlength:"1" %>
      </div>
      <div class="flex">
        <div class="mini_title">名前</div>
        <%= f.text_field :name, class: "mini_form w50vw" %>
      </div>
      <div class="mini_submit">
        <%= f.submit "作成", class: "mini_create_btn", id: "mini_create_btn" %>
      </div>
    </div>
  <% end %>
</div>
<div class="foot"></div>