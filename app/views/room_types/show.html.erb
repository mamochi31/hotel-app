<div class="mini_head">詳細</div>
<div class="mini_main">
  <%= form_with(model: @room_type, local: true, class:"mini_new_form") do |f| %>
    <div class="mini_create_form">
      <div class="flex">
        <div class="mini_title">コード</div>
        <%= f.text_field :code, class: "mini_form w15vw", maxlength:"5" %>
      </div>
      <div class="flex">
        <div class="mini_title">名前</div>
        <%= f.text_field :name, class: "mini_form w50vw" %>
      </div>
      <div class="flex">
        <div class="mini_title">定員</div>
        <%= f.text_field :capacity, class: "mini_form" %>
      </div>
      <div class="mini_submit">
        <%= f.submit "更新", class: "mini_create_btn", id: "mini_create_btn" %>
      </div>
    </div>
  <% end %>
</div>
<div class="mini_foot">
  <%= button_to "削除", room_type_path(@room_type.id), method: :delete, class: "mini_delete_button" %>
</div>