<div class="head">地域</div>
<div class="main">
  <button class="create_button" id="create_button">新規作成</button>
  <%= search_form_for @q, url: areas_search_path do |f| %>
    <div class="code_search_form">
      <%= f.label :code_cont, 'コード', class: "title" %>
      <%= f.search_field :code_cont, class: "code_form", maxlength:"4" %>
      <%= f.label :name_cont, '名前', class: "title" %>
      <%= f.search_field :name_cont, class: "w20vw" %>
      <%= f.submit "検索", class: "contents_right" %>
    </div>
  <% end %>
  <div class="search_results">
    <div class="flex">
      <div class="column w4vw">ID</div>
      <div class="column w6vw">コード</div>
      <div class="column w20vw">名前</div>
      <div class="column w15vw">登録日</div>
      <div class="column w15vw">更新日</div>
    </div>
    <div class="results">
      <% unless @areas == nil %>
        <% @areas.each do |area| %>
          <div class="result w60vw">
            <div class="columns w4vw"><%= area.id %></div>
            <div class="columns w6vw"><%= area.code %></div>
            <div class="columns w20vw"><%= area.name %></div>
            <div class="columns w15vw"><%= l area.created_at %></div>
            <div class="columns w15vw"><%= l area.updated_at %></div>
            <%= content_tag(:div, "", class: "show_link", id: area.id) %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="foot">
</div>